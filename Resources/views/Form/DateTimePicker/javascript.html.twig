<script type="text/javascript">
    $(document).ready(function() {
        $('#{{ id }}').find('.bootstrap-timepicker-input').timepicker({
            minuteStep: 15,
            showSeconds: false,
            showMeridian: false,
            disableFocus: true
        });

        $('#{{ id }}').find('.bootstrap-datepicker-input').datepicker({
            format: 'dd-mm-yyyy',
            language: '{{ app.request.locale }}',
            autoclose: {{autoclose}},      
            weekStart : {{weekstart}}
        });
    });
</script>